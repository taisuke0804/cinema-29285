<% if user_signed_in? %>
    <% if cinema.liked_by?(current_user) %>
        <p><span>お気に入り解除: </span><%=link_to cinema.likes.count, cinema_like_path(cinema_id: cinema.id), method: :delete, remote: true %></p>
    <% else %>
        <p><span>お気に入り登録: </span><%=link_to cinema.likes.count, cinema_likes_path(cinema_id: cinema.id), method: :post, remote: true %></p>
    <% end %>
<% else %>
    <p><span>お気に入り数: </span><%= cinema.likes.count %></p>
<% end %>