<h2 class="regist_top">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <div class="field">
    <%= f.label :email, "Eメール", class:"regist_label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"regist_field" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"regist_label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"regist_field" %>
  </div>

  <%# if devise_mapping.rememberable? %>
    <div class="field">
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    </div>
  <%# end %>

  <div class="actions">
    <%= f.submit "ログイン", class:"regist_submit" %>
  </div>
<% end %>

