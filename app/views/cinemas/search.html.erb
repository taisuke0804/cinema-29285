<%= render 'shared/header' %>

<%= search_form_for @p, url: cinemas_search_path do |f| %>
  <%= f.label :title_cont, '題名' %>
  <%= f.search_field :title_cont %>
  <br>
  <%= f.label :user_nickname_cont, 'ニックネーム' %>
  <%= f.search_field :user_nickname_cont %>
  <br>
  <%= f.label :genre_id_eq, 'ジャンル' %>
  <%= f.collection_select :genre_id_eq, Genre.all, :id, :name, include_blank: '指定なし'%>
  <br>
  <%= f.label :appreciation_id_eq, '鑑賞方法' %>
  <%= f.collection_select :appreciation_id_eq, Appreciation.all, :id, :name, include_blank: '指定なし'%>
  <br>
  <%= f.label :watch_time_id_eq, '鑑賞回数' %>
  <%= f.collection_select :watch_time_id_eq, WatchTime.all, :id, :name, include_blank: '指定なし'%>
  <br>

  <%= f.submit '検索' %>
<% end %>

<% @cinemas.each do |cinema| %>
  <div class="cinema_item">
    <div class="title_height">
      <div class="list_title">
        <div class="title_center">題名  </div>
      </div>
      <div class="list2">
        <%= link_to "『#{cinema.title}』", cinema_path(cinema.id), class:"list_border" %>
      </div>
    </div>

    <div class="cinema_title">
      <div class="list">点数  </div>
      <div class="list2"><%= "『#{cinema.score}点』" %></div>
    </div>

    <div class="cinema_title">
      <div class="list">ネタバレ  </div>
      <div class="list2"><%= "#{cinema.spoiler.name}" %></div>
    </div>

    <div class="cinema_title">
      <div class="list">ジャンル  </div>
      <div class="list2"><%= "#{cinema.genre.name}" %></div>
    </div>

    <div class="cinema_title">
      <div class="list">鑑賞方法  </div>
      <div class="list2"><%= "#{cinema.appreciation.name}" %></div>
    </div>

    <div class="cinema_title">
      <div class="list">鑑賞回数  </div>
      <div class="list2"><%= "#{cinema.watch_time.name}" %></div>
    </div>

    <div class="cinema_title">
      <div class="list">投稿者  </div>
      <div class="list2">
        <%= link_to "#{cinema.user.nickname}", "/users/#{cinema.user_id}", class:"list_border" %>
      </div>
    </div>
  </div>
<% end %>