<h2 class="cinema_info">作品情報入力</h2>
<%= form_with model: @cinema, url: cinemas_path, local: true do |f| %>
  <div>
    <%= f.label :title, "作品名" %><br />
    <%= f.text_area :title %>
  </div>

  <div>
    <%= f.label :review, "レビュー" %><br />
    <%= f.text_area :review %>
  </div>

  <div>
    <%= f.label :score, "点数" %><br />
    <%= f.text_field :score %>
  </div>

  <div>
    <%= f.label :spoiler, "ネタバレ" %><br />
    <%= f.select :spoiler, {'あり': 1, 'なし': 2}, { include_blank: '選択してください'} %>
  </div>

  <div>
    <%= f.label :genre, "ジャンル" %><br />
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {}) %>
  </div>

  <div>
    <%= f.label :appreciation, "鑑賞方法" %><br />
    <%= f.collection_select(:appreciation_id, Appreciation.all, :id, :name, {}, {}) %>
  </div>

  <div>
    <%= f.submit "送信" %>
  </div>

<% end %>